@model FacultyDto


<div class="container">

    <form method="post">

        <div class="row">

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Fcaulty Name</label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="FacultyName" class="form-control" />
                <span asp-validation-for="FacultyName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>

            <div class="col-10 pb-3">
                <textarea id="description" asp-for="FacultyDescription"></textarea>
                <span asp-validation-for="FacultyDescription" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Degree</label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Semesters</label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="SemesterCount" class="form-control" />
                <span asp-validation-for="SemesterCount" class="text-danger"></span>
            </div>

            <div class="col-3">
                <input type="submit" value="UPDATE" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a class="btn btn-secondary form-control" asp-action="index" >BACK</a>
            </div>
        </div>


    </form>

</div>

<script src="~/assets/vendor/ckeditor5/build/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#description'))
        .catch(error => {
            console.error(error);
        });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}