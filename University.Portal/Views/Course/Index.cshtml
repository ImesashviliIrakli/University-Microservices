@model IEnumerable<CourseDto>

@{
    ViewData["Title"] = "Course Index";
}

<h2>Course Index</h2>

<div class="mb-3">
    <a asp-action="AddCourse" class="btn btn-success">Add Course</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Course Description</th>
            <th>Semester</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseName</td>
                <td>@course.CourseDescription</td>
                <td>@course.Semester</td>
                <td>
                    <a asp-action="UpdateCourse" asp-route-courseId="@course.CourseId" class="btn btn-primary">Update</a>

                    <form asp-action="DeleteCourse" method="post" style="display: inline;" asp-route-courseId="@course.CourseId">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
