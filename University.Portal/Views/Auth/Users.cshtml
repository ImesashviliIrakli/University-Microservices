@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <h1>Users</h1>

    <div class="mb-3">
        <a class="btn btn-success" asp-action="CreateUser">Create New User</a>
    </div>

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>PrivateNumber</th>
                <th>PhoneNumber</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PrivateNumber</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-action="UpdateUser" asp-route-userId="@user.ID">Update</a>
                            <form asp-action="DeleteUser" method="post" style="display: inline;" asp-route-userId="@user.ID">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
