@model TeacherDto

@{
    ViewData["Title"] = "Teacher Profile";
}

<div class="container mt-5">
    <h1 class="mb-4">Profile</h1>

    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">You Must Create a Profile</h4>
            <p>Please fill out the form below to create your profile.</p>
        </div>

        <form asp-action="CreateProfile" method="post" class="mt-4">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateNumber" class="control-label"></label>
                <input asp-for="PrivateNumber" class="form-control" />
                <span asp-validation-for="PrivateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsOfExperience" class="control-label"></label>
                <input asp-for="YearsOfExperience" class="form-control" />
                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Profile</button>
        </form>
    }
    else
    {
        <form asp-action="UpdateProfile" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TeacherId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateNumber" class="control-label"></label>
                <input asp-for="PrivateNumber" class="form-control" />
                <span asp-validation-for="PrivateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsOfExperience" class="control-label"></label>
                <input asp-for="YearsOfExperience" class="form-control" />
                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>


        <a class="nav-link text-white" asp-area="" asp-controller="TeacherCourses" asp-action="Index">Courses</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
